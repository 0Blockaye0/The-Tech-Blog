<article class="login-form">
  <div class="title" id="editHeader">
    <h2>
      Edit Post
    </h2>
  </div>
  <form class="edit-post-form">
    <div class="input-labels">
      <div>
        <label for="post-title">Title:</label>
      </div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
      {{!-- <span>({{format_url post.post_url}})</span> --}}
    <div class="input-labels">
      <div>
        <label for="post-content"></label>
      </div>
      <textarea name="post-content" type="text" id="editPostTextbx" value="{{post.post_content}}">
      </textarea>
    </div>
    <div class="input-labels">
      by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn" id="saveEditbtn">Save post</button>
    <button type="button" class="delete-post-btn btn" id="deleteEditbtn">Delete post</button>
  </form>
</article>
{{> comments post.comments}}


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>